<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <SuggestForm>
    <FormDialog ID="FormDialog" Header="Suggest">
      <Stylesheet>

        .scDialogContentContainer
        {
        padding-bottom: 0px;
        }

        .sitecoreSuggest_ButtonsContainer {
        position: absolute;
        right: 15px;
        top: 8px;
        }

        .sitecoreSuggest_Label {
        padding: 0px 0px 5px 0px;
        }

        .sitecoreSuggest_Input {
        margin-bottom: 10px;
        }

        .sitecoreSuggest_Section {
        border: 1px #dddddd solid;
        background-color: #f0f0f0;
        padding: 10px;
        }

        .sitecoreSuggest_InputSection {
        margin-bottom: 15px;
        }

        .sitecoreSuggest_SuggestionSection {
        margin-bottom: 0px;
        }

        .sitecoreSuggest_HeaderColumn {
        padding: 10px 10px 15px 0px;
        }

        .sitecoreSuggest_HeaderNameColumn {
        font-size: 16px;
        padding-top: 15px;
        }

        .sitecoreSuggest_HeaderSection {
        display: flex;

        }

      </Stylesheet>
      <CodeBeside Type="SitecoreSuggest.Dialogs.SuggestForm, SitecoreSuggest"/>

      <GridPanel class="scConfirmationContainer" Width="100%" >

        <div class="sitecoreSuggest_HeaderSection">
          <div class="sitecoreSuggest_HeaderColumn">
            <Image ID="IconImage"/>
          </div>
          <div class="sitecoreSuggest_HeaderColumn sitecoreSuggest_HeaderNameColumn">
            <Literal ID="NameLiteral"/>
          </div>
        </div>

        <div class="sitecoreSuggest_Section sitecoreSuggest_InputSection">

          <div class="sitecoreSuggest_Label">
            Write summary of:
          </div>
        
          <Combobox ID="PromptFieldIdComboBox" class="sitecoreSuggest_Input" Width="100%">
            <ListItem Value="" Header=""/>
          </Combobox>

          <div class="sitecoreSuggest_Label">
            Or write about:
          </div>
          
          <Edit ID="PromptEdit" class="sitecoreSuggest_Input"/>

          <div class="sitecoreSuggest_Label">
            And make the text this long:
          </div>
          
          <Combobox ID="WordsCombobox" class="sitecoreSuggest_Input" Width="100%">
            <ListItem Value="40" Header="Short"/>
            <ListItem Value="3000" Selected="true" Header="Medium"/>
          </Combobox>
        
          <Button Click="GenerateClick" class="scButton" Header="Generate suggestion" />

        </div>

        <div class="sitecoreSuggest_Section sitecoreSuggest_SuggestionSection">

          <div class="sitecoreSuggest_Label">
            Suggestion:
          </div>
          <Memo ID="SuggestionMemo" class="sitecoreSuggest_InputSection" Height="150px"/>

          <div class="sitecoreSuggest_Label">
            Use the suggestion in this field:
          </div>

          <Combobox ID="FieldIdCombobox" Width="100%">
            <ListItem Value="" Header=""/>
          </Combobox>

        </div>
      
      </GridPanel>

      <Border class="sitecoreSuggest_ButtonsContainer" def:placeholder="Buttons">

        <Button Click="AppendClick" class="scButton" Header="Append" />
        <Button Click="InsertClick" class="scButton scButtonPrimary" KeyCode="13" Header="Insert" />
        <Button Click="CancelClick" Header="Cancel" />
      </Border>
    </FormDialog>
  </SuggestForm>
</control>
