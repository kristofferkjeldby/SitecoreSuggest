<configuration xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="ContentManagement or Standalone">
    <commands>
      <command name="custom:SitecoreSuggest" type="SitecoreSuggest.Commands.SuggestCommand, SitecoreSuggest"/>
    </commands>
    <settings>
      <!--<setting name="SitecoreSuggest.ApiKey" value=""/>-->
      <setting name="SitecoreSuggest.BaseUrl" value="https://api.openai.com/v1"/>
      <!-- Please make sure to match the endpoint ("completions" or "chat") to the selected model as the model exposed by the endpoints are not the same -->
      <setting name="SitecoreSuggest.CompletionsModel" value="text-davinci-003"/>
      <setting name="SitecoreSuggest.CompletionsMaxTokens" value="4097"/>
      <setting name="SitecoreSuggest.ChatModel" value="gpt-3.5-turbo"/>
      <setting name="SitecoreSuggest.ChatMaxTokens" value="4097"/>
      <setting name="SitecoreSuggest.ReservedTokens" value="1024"/>
    </settings>
  </sitecore>
</configuration>
